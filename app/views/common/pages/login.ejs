<!DOCTYPE html>
<html lang="es">
<%- include('../components/head') %>

<body class="login-page">
    <h1 class="title"><%= title %></h1>

    <div class="container-content">
        <div class="container-img">
            <div class="border">
                <img src="/images/logo.webp" alt="">
            </div>
        </div>

        <h2 class="subtitle">CST | AMERICANO</h2>

        <form id="login-form" action="/api/login" method="POST" class="login-form">
            <div class="control">
                <label for="username">Usuario</label>
                <i class="icon-user-circle"></i>
                <input class="username" type="text" autocomplete="username" id="username" name="username" placeholder="Usuario" required>
            </div>

            <div class="control">
                <label for="password">Contraseña</label>
                <i class="icon-lock"></i>
                <input type="password" id="password" name="password" autocomplete="current-password" placeholder="Contraseña" required>
            </div>

            <button type="submit">Iniciar sesión</button>
        </form>
    </div>

    <script src="/js/common/pages/login.js"></script>
</body>
</html>
